<% layout('layout/main') %>

    <!-- Contenido principal (sin navbar) -->
    <main class="text-center space-y-8 px-4 py-16 md:py-24">

        <!-- Título principal -->
        <h1 class="text-5xl md:text-7xl font-bold tracking-wider flex items-center justify-center gap-3">
            Bienvenido
            <i class="fas fa-film text-netflix-red text-6xl md:text-8xl"></i>
        </h1>

        <!-- Texto descriptivo -->
        <p class="text-xl md:text-2xl text-gray-300">
            Selecciona una opción:
        </p>

        <!-- Enlaces de navegación -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center text-lg">
            <a href="/public"
                class="flex items-center gap-3 bg-netflix-red hover:bg-red-700 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
