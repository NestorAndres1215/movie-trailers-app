<% layout('layout/main') %>

<main class="text-center space-y-8 px-4 py-16 md:py-24">

    <!-- Título principal -->
    <h1 id="main-title" class="text-5xl md:text-7xl font-bold tracking-wider flex items-center justify-center gap-3 opacity-0 translate-y-10 transition-all duration-700">
        Bienvenido
        <i id="film-icon" class="fas fa-film text-netflix-red text-6xl md:text-8xl transform scale-0 transition-transform duration-700"></i>
    </h1>

    <!-- Texto descriptivo -->
    <p id="main-text" class="text-xl md:text-2xl text-gray-300 opacity-0 translate-y-6 transition-all duration-700 delay-200">
        Selecciona una opción:
    </p>

    <!-- Enlaces de navegación -->
    <div id="main-buttons" class="flex flex-col sm:flex-row gap-6 justify-center items-center text-lg opacity-0 translate-y-6 transition-all duration-700 delay-400">
        <a href="/public"
            class="flex items-center gap-3 bg-netflix-red hover:bg-red-700 text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            <i class="fas fa-video text-xl"></i>
            Ver catálogo
        </a>

        <span class="hidden sm:inline text-gray-500">|</span>

        <a href="/admin"
            class="flex items-center gap-3 bg-gray-800 hover:bg-gray-700 text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            <i class="fas fa-cog text-xl"></i>
            Administración
        </a>
    </div>

</main>

