<% layout('layout/main') %>

<!-- Título de la sección -->
<h2 class="text-3xl md:text-4xl font-bold text-white mb-8 px-6">
  <i class="fas fa-video text-netflix-red mr-3"></i>
  Catálogo público
</h2>

<!-- Grid responsive estilo Netflix -->
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-5 px-6 pb-12">
  <% movies.forEach(movie => { %>
    <%- include('../components/movie-card', { movie }) %>
  <% }); %>
</div>