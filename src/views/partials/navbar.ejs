<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MovieTrailers - Navbar</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Colores y fuente estilo Netflix -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        netflix: {
                            red: '#E50914',
                            black: '#141414',
                            dark: '#221f1f',
                        }
                    },
                    fontFamily: {
                        sans: ['"Bebas Neue"', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-900">

    <!-- NAVBAR ESTILO NETFLIX (solo el header) -->
    <header class="bg-black/95 backdrop-blur-sm fixed top-0 left-0 right-0 z-50 border-b border-gray-800">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">

            <!-- Logo -->
            <h2 class="text-2xl md:text-3xl font-bold tracking-wider">
                <a href="/"
                    class="flex items-center gap-2 text-netflix-red hover:text-white transition-colors duration-200">
                    <i class="fas fa-film text-3xl md:text-4xl"></i>
                    MovieTrailers
                </a>
            </h2>

            <!-- Navegación Desktop -->
            <nav class="hidden md:flex items-center gap-8 text-white">
                <a href="/public"
                    class="flex items-center gap-2 hover:text-netflix-red transition-colors duration-200 font-medium">
                    <i class="fas fa-video"></i>
                    Catálogo
                </a>
                <a href="/admin"
                    class="flex items-center gap-2 hover:text-netflix-red transition-colors duration-200 font-medium">
                    <i class="fas fa-cog"></i>
                    Admin
                </a>
            </nav>

            <!-- Botón Menú Móvil -->
            <button id="mobile-menu-btn" class="md:hidden text-2xl text-white hover:text-netflix-red transition-colors">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <!-- Menú Móvil Desplegable -->
        <div id="mobile-menu" class="hidden md:hidden bg-netflix-dark border-t border-gray-700">
            <div class="container mx-auto px-4 py-4 space-y-3">
                <a href="/public"
                    class="flex items-center gap-3 text-lg text-white hover:text-netflix-red transition-colors">
                    <i class="fas fa-video"></i>
                    Catálogo
                </a>
                <a href="/admin"
                    class="flex items-center gap-3 text-lg text-white hover:text-netflix-red transition-colors">
                    <i class="fas fa-cog"></i>
                    Admin
                </a>
            </div>
        </div>
    </header>

    <!-- Espaciador para contenido debajo del navbar fijo -->
    <div class="h-20"></div>

    <!-- Script para menú móvil -->
    <script>
        document.getElementById('mobile-menu-btn').addEventListener('click', () => {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
    </script>
</body>

</html>